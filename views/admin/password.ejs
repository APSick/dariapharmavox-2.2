<% layout('../partials/layout') %>

    <section class="flex justify-center">
        <div class="w-full max-w-sm rounded-2xl border border-white/10 bg-slate-900/70 p-6 shadow-xl shadow-sky-900/40">
            <h1 class="text-xl font-semibold text-slate-50 mb-4">Смена пароля</h1>

            <form action="/admin/password" method="POST" class="space-y-4 text-sm">
                <div class="space-y-1">
                    <label class="block text-slate-200/90">Текущий пароль</label>
                    <input type="password" name="currentPassword" required class="w-full rounded-xl border border-white/15 bg-slate-950/70 px-3 py-2 text-sm text-slate-100 focus:outline-none focus:ring-2 focus:ring-sky-400/70" />
                </div>

                <div class="space-y-1">
                    <label class="block text-slate-200/90">Новый пароль</label>
                    <input type="password" name="newPassword" required class="w-full rounded-xl border border-white/15 bg-slate-950/70 px-3 py-2 text-sm text-slate-100 focus:outline-none focus:ring-2 focus:ring-sky-400/70" />
                </div>

                <div class="space-y-1">
                    <label class="block text-slate-200/90">Подтверждение нового пароля</label>
                    <input type="password" name="newPassword2" required class="w-full rounded-xl border border-white/15 bg-slate-950/70 px-3 py-2 text-sm text-slate-100 focus:outline-none focus:ring-2 focus:ring-sky-400/70" />
                </div>

                <button type="submit" class="w-full mt-2 inline-flex justify-center items-center gap-2 rounded-xl bg-sky-500 hover:bg-sky-400 text-slate-950 text-sm font-semibold py-2.5 transition shadow-lg shadow-sky-500/40">
        Сохранить новый пароль
      </button>
            </form>
        </div>
    </section>