<% layout('../partials/layout') %>

    <section class="max-w-2xl mx-auto space-y-4">
        <h1 class="text-xl font-semibold text-slate-50">Новое интервью</h1>
        <form action="/admin/interviews" method="POST" class="space-y-4 text-sm">
            <div>
                <label class="block text-slate-200/90 mb-1">Название интервью</label>
                <input name="title" required class="w-full rounded-xl border border-white/15 bg-slate-950/70 px-3 py-2" />
            </div>

            <div>
                <label class="block text-slate-200/90 mb-1">Ссылка на видео (YouTube embed или обычная)</label>
                <input name="video_url" class="w-full rounded-xl border border-white/15 bg-slate-950/70 px-3 py-2" />
                <p class="text-[11px] text-slate-400/85 mt-1">
                    Можно вставить embed-ссылку вида: <code>https://www.youtube.com/embed/ID</code>
                </p>
            </div>

            <div>
                <label class="block text-slate-200/90 mb-1">Краткое описание проекта</label>
                <textarea name="project_description" rows="3" class="w-full rounded-xl border border-white/15 bg-slate-950/70 px-3 py-2"></textarea>
            </div>

            <div>
                <label class="block text-slate-200/90 mb-1">Цели проекта</label>
                <textarea name="goals" rows="2" class="w-full rounded-xl border border-white/15 bg-slate-950/70 px-3 py-2"></textarea>
            </div>

            <div>
                <label class="block text-slate-200/90 mb-1">Актуальность</label>
                <textarea name="relevance" rows="2" class="w-full rounded-xl border border-white/15 bg-slate-950/70 px-3 py-2"></textarea>
            </div>

            <div>
                <label class="block text-slate-200/90 mb-1">Ключевые вопросы / темы (по одному в строке)</label>
                <textarea name="highlights" rows="4" class="w-full rounded-xl border border-white/15 bg-slate-950/70 px-3 py-2"></textarea>
            </div>

            <button class="px-4 py-2 rounded-xl bg-sky-500 hover:bg-sky-400 text-slate-950 font-semibold">
      Сохранить
    </button>
        </form>
    </section>