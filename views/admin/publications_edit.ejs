<% layout('../partials/layout') %>

    <section class="max-w-2xl mx-auto space-y-4">
        <h1 class="text-xl font-semibold text-slate-50">Редактирование публикации</h1>

        <form action="/admin/publications/<%= publication.id %>?_method=PUT" method="POST" class="space-y-4 text-sm">
            <div>
                <label class="block text-slate-200/90 mb-1">Название статьи</label>
                <input name="title" required value="<%= publication.title %>" class="w-full rounded-xl border border-white/15 bg-slate-950/70 px-3 py-2" />
            </div>

            <div class="grid grid-cols-2 gap-3">
                <div>
                    <label class="block text-slate-200/90 mb-1">Журнал</label>
                    <input name="journal" value="<%= publication.journal || '' %>" class="w-full rounded-xl border border-white/15 bg-slate-950/70 px-3 py-2" />
                </div>
                <div>
                    <label class="block text-slate-200/90 mb-1">Год</label>
                    <input type="number" name="year" value="<%= publication.year || '' %>" class="w-full rounded-xl border border-white/15 bg-slate-950/70 px-3 py-2" />
                </div>
            </div>

            <div>
                <label class="block text-slate-200/90 mb-1">Статус</label>
                <input name="status" value="<%= publication.status || '' %>" class="w-full rounded-xl border border-white/15 bg-slate-950/70 px-3 py-2" />
            </div>

            <div>
                <label class="block text-slate-200/90 mb-1">Ссылка</label>
                <input name="link" value="<%= publication.link || '' %>" class="w-full rounded-xl border border-white/15 bg-slate-950/70 px-3 py-2" />
            </div>

            <div>
                <label class="block text-slate-200/90 mb-1">Комментарий / аннотация</label>
                <textarea name="notes" rows="3" class="w-full rounded-xl border border-white/15 bg-slate-950/70 px-3 py-2"><%= publication.notes || '' %></textarea>
            </div>

            <div class="flex gap-2">
                <button class="px-4 py-2 rounded-xl bg-emerald-500 hover:bg-emerald-400 text-slate-950 font-semibold">
        Сохранить изменения
      </button>
                <a href="/admin/publications" class="px-4 py-2 rounded-xl border border-white/20 text-slate-100 hover:bg-slate-800/80 text-xs">
        Отмена
      </a>
            </div>
        </form>
    </section>