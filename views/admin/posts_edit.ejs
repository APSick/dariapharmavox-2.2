<% layout('../partials/layout') %>

    <section class="max-w-2xl mx-auto space-y-4">
        <h1 class="text-xl font-semibold text-slate-50">Редактирование поста «Фарма-жизнь»</h1>

        <form action="/admin/posts/<%= post.id %>?_method=PUT" method="POST" class="space-y-4 text-sm">
            <div>
                <label class="block text-slate-200/90 mb-1">Заголовок</label>
                <input name="title" required value="<%= post.title %>" class="w-full rounded-xl border border-white/15 bg-slate-950/70 px-3 py-2" />
            </div>

            <div>
                <label class="block text-slate-200/90 mb-1">Краткое описание (summary)</label>
                <textarea name="summary" rows="2" class="w-full rounded-xl border border-white/15 bg-slate-950/70 px-3 py-2"><%= post.summary || '' %></textarea>
            </div>

            <div>
                <label class="block text-slate-200/90 mb-1">Текст статьи</label>
                <textarea name="content" rows="10" class="w-full rounded-xl border border-white/15 bg-slate-950/70 px-3 py-2"><%= post.content || '' %></textarea>
            </div>

            <div class="flex gap-2">
                <button class="px-4 py-2 rounded-xl bg-violet-500 hover:bg-violet-400 text-slate-950 font-semibold">
        Сохранить изменения
      </button>
                <a href="/admin/posts" class="px-4 py-2 rounded-xl border border-white/20 text-slate-100 hover:bg-slate-800/80 text-xs">
        Отмена
      </a>
            </div>
        </form>
    </section>