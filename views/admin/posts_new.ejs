<% layout('../partials/layout') %>

    <section class="max-w-2xl mx-auto space-y-4">
        <h1 class="text-xl font-semibold text-slate-50">Новая запись «Фарма-жизнь»</h1>
        <form action="/admin/posts" method="POST" class="space-y-4 text-sm">
            <div>
                <label class="block text-slate-200/90 mb-1">Заголовок</label>
                <input name="title" required class="w-full rounded-xl border border-white/15 bg-slate-950/70 px-3 py-2" />
            </div>

            <div>
                <label class="block text-slate-200/90 mb-1">Краткое описание (summary)</label>
                <textarea name="summary" rows="2" class="w-full rounded-xl border border-white/15 bg-slate-950/70 px-3 py-2"></textarea>
            </div>

            <div>
                <label class="block text-slate-200/90 mb-1">Текст статьи</label>
                <textarea name="content" rows="10" class="w-full rounded-xl border border-white/15 bg-slate-950/70 px-3 py-2" placeholder="Можно писать в свободном формате. Переносы строк будут сохранены."></textarea>
            </div>

            <button class="px-4 py-2 rounded-xl bg-violet-500 hover:bg-violet-400 text-slate-950 font-semibold">
      Опубликовать
    </button>
        </form>
    </section>