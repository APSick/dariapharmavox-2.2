<% layout('../partials/layout') %>

    <section class="max-w-2xl mx-auto space-y-4">
        <h1 class="text-xl font-semibold text-slate-50">Редактирование интервью</h1>

        <form action="/admin/interviews/<%= interview.id %>?_method=PUT" method="POST" class="space-y-4 text-sm">
            <div>
                <label class="block text-slate-200/90 mb-1">Название интервью</label>
                <input name="title" required value="<%= interview.title %>" class="w-full rounded-xl border border-white/15 bg-slate-950/70 px-3 py-2" />
            </div>

            <div>
                <label class="block text-slate-200/90 mb-1">Ссылка на видео</label>
                <input name="video_url" value="<%= interview.video_url || '' %>" class="w-full rounded-xl border border-white/15 bg-slate-950/70 px-3 py-2" />
            </div>

            <div>
                <label class="block text-slate-200/90 mb-1">Краткое описание проекта</label>
                <textarea name="project_description" rows="3" class="w-full rounded-xl border border-white/15 bg-slate-950/70 px-3 py-2"><%= interview.project_description || '' %></textarea>
            </div>

            <div>
                <label class="block text-slate-200/90 mb-1">Цели проекта</label>
                <textarea name="goals" rows="2" class="w-full rounded-xl border border-white/15 bg-slate-950/70 px-3 py-2"><%= interview.goals || '' %></textarea>
            </div>

            <div>
                <label class="block text-slate-200/90 mb-1">Актуальность</label>
                <textarea name="relevance" rows="2" class="w-full rounded-xl border border-white/15 bg-slate-950/70 px-3 py-2"><%= interview.relevance || '' %></textarea>
            </div>

            <div>
                <label class="block text-slate-200/90 mb-1">Ключевые вопросы / темы (по одному в строке)</label>
                <textarea name="highlights" rows="4" class="w-full rounded-xl border border-white/15 bg-slate-950/70 px-3 py-2"><%= highlightsText %></textarea>
            </div>

            <div class="flex gap-2">
                <button class="px-4 py-2 rounded-xl bg-sky-500 hover:bg-sky-400 text-slate-950 font-semibold">
        Сохранить изменения
      </button>
                <a href="/admin/interviews" class="px-4 py-2 rounded-xl border border-white/20 text-slate-100 hover:bg-slate-800/80 text-xs">
        Отмена
      </a>
            </div>
        </form>
    </section>